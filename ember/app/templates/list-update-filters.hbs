<div class='form-group'>
  <label>Start Date</label>
  {{input class='start-date date-filter list-update-filter input-sm form-control' type='text' value=startDate}}
</div>

<div class='form-group'>
  <label>End Date</label>
  {{input class='end-date date-filter list-update-filter input-sm form-control' type='text' value=endDate}}
</div>

<div class='form-group'>
  <label>Status</label>
  {{view Ember.Select viewName='select' content=statuses value=status class='form-control list-update-filter input-sm'}}
</div>
