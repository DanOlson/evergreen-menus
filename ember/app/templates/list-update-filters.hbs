<div class='form-group'>
  <label>Start Date</label>
  {{date-picker date=startDate valueFormat='YYYY-MM-DD' yearRange="2014,2020" class='start-date date-filter list-update-filter input-sm form-control'}}
</div>

<div class='form-group'>
  <label>End Date</label>
  {{date-picker date=endDate valueFormat='YYYY-MM-DD' yearRange="2014,2020" class='end-date date-filter list-update-filter input-sm form-control'}}
</div>

<div class='form-group'>
  <label>Status</label>
  {{view Ember.Select viewName='select' content=statuses value=status class='form-control list-update-filter input-sm'}}
</div>
