<h2>Login</h2>

<form role='form' {{action 'loginUser' on='submit'}}>
  <div class='form-group'>
    <label for='login-username'>Username</label>
    {{input type='text' id='login-username' class='form-control' value=username placeholder='Username'}}
  </div>
  <div class='form-group'>
    <label for='login-password'>Password</label>
    {{input type='password' id='login-password' class='form-control' value=password placeholder='Password'}}
  </div>

  <button class='btn btn-default' type='submit'>Submit</button>
</form>
