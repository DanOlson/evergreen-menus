<div class='page'>
  <div class='row'>
    <div class='page-heading col-sm-12'>
      <div class='pull-left'>
        <h2>New Establishment</h2>
      </div>
    </div>
    <div>
      <form role='form'>
        <div class='form-group'>
          <label for='establishment-name'>Name</label>
          {{input type='text' value=name class='form-control' id='establishment-name' placeholder='Name'}}
        </div>
        <div class='form-group'>
          <label for='establishment-url'>URL</label>
          {{input type='url' value=url class='form-control' id='establishment-url' placeholder='URL'}}
        </div>
        <div class='form-group'>
          <label for='establishment-address'>Address</label>
          {{input type='text' value=address class='form-control' id='establishment-address' placeholder='Address'}}
        </div>
        <div class='form-group'>
          <label for='establishment-latitude'>Latitude</label>
          {{input type='text' value=latitude class='form-control' id='establishment-latitude' placeholder='Latitude'}}
        </div>
        <div class='form-group'>
          <label for='establishment-latitude'>Longitude</label>
          {{input type='text' value=longitude class='form-control' id='establishment-longitude' placeholder='Longitude'}}
        </div>
        <div class='checkbox'>
          <label>
            {{input type='checkbox' checked=active id='establishment-active'}} Active
          </label>
        </div>
        <div class='form-group'>
          <div>
            <button type='submit' class='btn btn-success' {{action formSubmit}}>Create</button>
            <button type='button' class='btn btn-danger' {{action cancel}}>Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
