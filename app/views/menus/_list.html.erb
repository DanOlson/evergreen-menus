<ul class="beermapper-menu" style="list-style: none;">
  <% beers.each do |beer| %>
    <li>
      <div class="beermapper-menu-item">
        <span class="beermapper-menu-item-name"><strong><%= beer.name %></strong></span>
        <% if show_price && beer.price %>
          &nbsp;&mdash;&nbsp; <span class="beermapper-menu-item-price"><%= number_to_currency beer.price, precision: beer.price % 1 > 0 ? 2 : 0 %></span>
        <% end %>
      <% if show_description %>
        <div class="beermapper-menu-item-description"><%= beer.description %></div>
      <% end %>
      </div>
    </li>
    <br />
  <% end %>
</ul>
