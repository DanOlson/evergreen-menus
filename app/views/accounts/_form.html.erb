<% breadcrumb :account, @account %>
<%= render 'shared/panel', title: title, data_test: 'account-form' do %>
  <%= form_for @account do |f| %>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :name, class: 'control-label' %>
        <div>
          <%= f.text_field :name, class: 'form-control', data: { test: 'account-name' } %>
        </div>
      </div>

      <% if can? :activate, @account %>
        <div class="form-group">
          <div class="form-check">
            <label class="form-check-label">
              <%= f.check_box :active, class: 'form-check-input', data: { test: 'account-active' } %>
              Active
            </label>
          </div>
        </div>
      <% end %>

      <div class="button-wrapper">
        <%= f.submit submit_text, class: 'btn btn-primary', data: { test: 'account-form-submit' } %>
        <%= link_to 'Cancel', accounts_path, class: 'btn btn-outline-secondary', data: { test: 'account-form-cancel' } %>
        <% if @account.persisted? && can?(:delete, @account) %>
          <label for="account-form-delete" class="btn btn-danger" data-test="account-form-delete">Delete</label>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @account.persisted? && can?(:delete, @account) %>
    <%= button_to 'Delete', account_path(@account), method: :delete, class: 'hidden', id: 'account-form-delete', data: { confirm: 'Are you sure you want to delete this account?' } %>
  <% end %>
<% end %>
