<div class="row subscriptions">
  <% @plans.each do |plan| %>
    <div class="col-sm-4">
      <div class="card plan">
        <h4 class="plan-name"><%= plan.name %></h4>
        <p class="plan-price"><%= number_to_currency plan.price, precision: 0 %> / <%= plan.interval %></p>
        <div class="plan-description">
          <ul class="value-checks">
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Manage <%= plan.description %></span>
            </li>
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Power your website</span>
            </li>
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Sync with Google My Business</span>
            </li>
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Add your menu to Facebook</span>
            </li>
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Print menus</span>
            </li>
            <li class="value-add-item">
              <i class="icon fa fa-check" aria-hidden></i>
              <span class="value-add-item-text">Display in-house digital menus</span>
            </li>
          </ul>
        </div>
        <div class="cta">
          <button class="btn btn-outline-success" onClick="choosePlan(<%= plan.id %>)" type="button">Choose</button>
        </div>

        <div class="subscription-form-wrapper">
          <%= form_for :subscription, url: subscriptions_path, method: :post, html: { class: "subscription-form", id: "plan-form-#{plan.id}", data: { 'plan-id' => plan.id } } do |f| %>
            <%= f.hidden_field :plan_id, value: plan.id %>
            <%= f.hidden_field :source, id: "subscription_source_#{plan.id}" %>

            <div class="form-group">
              <%= f.label :email, class: 'control-label' %>
              <div>
                <%= f.email_field :email, class: 'form-control', data: { test: 'subscription-email' } %>
              </div>
            </div>

            <div class="form-group">
              <label for="control-label">
                Credit Card
              </label>
              <div id="card-element-<%= plan.id %>">
              </div>

              <div id="card-errors-<%= plan.id %>" class="text-danger" role="alert"></div>
            </div>

            <%= f.submit 'Buy', class: 'btn btn-evrgn-primary', data: { test: 'subscription-form-submit' } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% content_for :javascripts do %>
  <script src="https://js.stripe.com/v3/"></script>
  <script type="text/javascript">
    function choosePlan (planId) {
      var forms = document.getElementsByClassName('subscription-form')
      var activeForm = document.getElementById('plan-form-' + planId)

      for (var i = 0; i < forms.length; i++) {
        var form = forms[i]
        form.classList.remove('show')
      }

      activeForm.classList.toggle('show')
    }

    var stripe = Stripe('<%= @stripe_pub_key %>')
    var style = {
      base: {
        color: '#32325d',
        lineHeight: '18px',
        fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
        fontSmoothing: 'antialiased',
        fontSize: '16px',
        '::placeholder': {
          color: '#aab7c4'
        }
      },
      invalid: {
        color: '#fa755a',
        iconColor: '#fa755a'
      }
    }

    var forms = document.getElementsByClassName('subscription-form')
    for (var i = 0; i < forms.length; i++) {
      var planId = forms[i].getAttribute('data-plan-id')
      initStripeForm(planId)
    }

    function initStripeForm (planId) {
      var elements = stripe.elements()
      var card = elements.create('card', {style: style})
      card.mount('#card-element-' + planId)

      card.addEventListener('change', function (event) {
        var displayError = document.getElementById('card-errors-' + planId)
        if (event.error) {
          displayError.textContent = event.error.message
        } else {
          displayError.textContent = ''
        }
      })

      var form = document.getElementById('plan-form-' + planId)
      form.addEventListener('submit', function (event) {
        event.preventDefault()
        stripe.createToken(card).then(function (result) {
          if (result.error) {
            var errorElement = document.getElementById('card-errors-' + planId)
            errorElement.textContent = result.error.message
          } else {
            tokenHandler(form)(result.token)
          }
        })
      })
    }

    function tokenHandler (form) {
      return function applyTokenAndSubmit (token) {
        var input = form.querySelector('input[name="subscription[source]"]')
        input.value = token.id
        form.submit()
      }
    }
  </script>
<% end %>
