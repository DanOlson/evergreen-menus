<nav class="navbar navbar-expand-lg evergreen-nav">
  <%= link_to "https://evergreenmenus.com", class: "navbar-brand" do %>
    <%= image_tag '/images/evergreen-logo-white.png', height: '50', width: '172', alt: 'Logo' %>
  <% end %>
  <div class="navbar-collapse">
    <% if user_signed_in? %>
      <% if admin_user? %>
        <%= render 'layouts/admin_header' %>
      <% else %>
        <%= render partial: 'layouts/customer_header', locals: { account: current_user.account } %>
      <% end %>
    <% else %>
      <ul class="navbar-nav ml-auto">
        <li class="navbar-item">
          <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
        </li>
      </ul>
    <% end %>
  </div>
</nav>
