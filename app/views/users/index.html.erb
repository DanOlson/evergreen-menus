<div class="panel panel-info" data-test="staff-panel">
  <div class="panel-heading">
    <h3 class="panel-title">Staff</h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
      <% @users.each do |person| %>
        <% href = person == current_user ? edit_user_registration_path : edit_account_user_path(@account, person) %>
        <%= link_to "#{person.first_name} #{person.last_name}", href, class: "list-group-item", data: { test: "staff-member" } %>
      <% end %>
    </div>
    <%= link_to 'Invite staff', new_account_user_invitation_path(@account), class: 'btn btn-success' %>
  </div>
</div>

<div class="panel panel-info" data-test="pending-invitations-panel">
  <div class="panel-heading">
    <h3 class="panel-title">Pending Invitations</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @user_invitations.each do |person| %>
        <li data-test="staff-member-invited">
          <%= person.first_name %> <%= person.last_name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
